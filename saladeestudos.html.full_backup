        // === CONFIGURA√á√ÉO E INICIALIZA√á√ÉO ===
        class StudyRoomApp {
            constructor() {
                this.isInitialized = false;
                this.userId = null;
                this.db = null;
                this.storage = null;
                this.auth = null;
                
                // Cache para otimiza√ß√£o
